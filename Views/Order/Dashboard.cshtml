    <!-- JS for Nearest Pharmacies -->
    <script>
        function findNearestPharmacies() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition, showError);
            } else {
                alert("Geolocation is not supported by this browser.");
            }
        }

        function showPosition(position) {
            const lat = position.coords.latitude;
            const lon = position.coords.longitude;

            fetch(`/Pharmacy/GetNearest?lat=${lat}&lon=${lon}`)
                .then(res => res.json())
                .then(data => {
                    let container = document.getElementById("nearestPharmacies");
                    container.innerHTML = "";

                    if (data.length === 0) {
                        container.innerHTML = "<p>No pharmacies found nearby.</p>";
                    } else {
                        data.forEach(pharmacy => {
                            container.innerHTML += `
                              <div class="card">
                                <div class="icon"><i class="fas fa-clinic-medical"></i></div>
                                <h5>${pharmacy.name}</h5>
                                <p>${pharmacy.address}</p>
                                <p><b>${pharmacy.distance.toFixed(1)} km away</b></p>
                                <a href="/Order/Create?pharmacyId=${pharmacy.id}">Order Drugs</a>
                                <a href="/Complaint/Create?pharmacyId=${pharmacy.id}" style="background:#ef4444">Lodge Complaint</a>
                              </div>
                            `;
                        });
                    }
                });
        }

        function showError(error) {
            alert("Unable to get location. Please enable location services.");
        }
    </script>
